## du1
if   [[ $OSTYPE == "linux"*  ]]; then
  alias du1='du --max-depth=1'
elif [[ $OSTYPE == "darwin"* ]]; then
  alias du1='du -d 1'
fi

## sshk
if [[ $OSTYPE == "linux"* ]]; then
  alias sshk='ssh-add ~/.ssh/id_ed25519'
elif [[ $OSTYPE == "darwin"* ]]; then
  alias sshk='ssh-add --apple-use-keychain ~/.ssh/id_ed25519'
fi